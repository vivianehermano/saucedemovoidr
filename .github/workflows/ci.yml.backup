name: E2E Testes Automatizados - Sauce Demo

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]
  workflow_dispatch:
  schedule:
    # Executa todos os dias Ã s 6:00 UTC
    - cron: '0 6 * * *'

env:
  NODE_VERSION: '20'
  CI: true

jobs:
  # Job para verificar se o site estÃ¡ acessÃ­vel
  health-check:
    name: ğŸ¥ Verificar Disponibilidade do Site
    runs-on: ubuntu-latest
    timeout-minutes: 5
    steps:
      - name: Verificar se saucedemo.com estÃ¡ acessÃ­vel
        run: |
          echo "ğŸ” Verificando se o site estÃ¡ acessÃ­vel..."
          curl -f -s -o /dev/null https://www.saucedemo.com || exit 1
          echo "âœ… Site acessÃ­vel!"

  # Job principal de testes
  test:
    name: ğŸ§ª Testes E2E
    runs-on: ubuntu-latest
    timeout-minutes: 30
    needs: health-check
    
    strategy:
      fail-fast: false
      matrix:
        test-suite:
          - name: "smoke"
            command: "test:smoke"
            browser: "chromium"
          - name: "critico" 
            command: "test:critico"
            browser: "chromium"
          - name: "seguranca"
            command: "test:seguranca" 
            browser: "chromium"
          - name: "funcional"
            command: "test:funcional"
            browser: "firefox"
          - name: "regressao"
            command: "test:regressao"
            browser: "chromium"

    steps:
      - name: ğŸ“¥ Checkout do cÃ³digo
        uses: actions/checkout@v4

      - name: ğŸ“¦ Setup Node.js ${{ env.NODE_VERSION }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: ğŸ“‹ Cache das dependÃªncias
        uses: actions/cache@v4
        with:
          path: ~/.npm
          key: ${{ runner.os }}-node-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-

      - name: ğŸ”§ Instalar dependÃªncias
        run: npm ci

      - name: ğŸ­ Cache dos browsers Playwright
        uses: actions/cache@v4
        with:
          path: ~/.cache/ms-playwright
          key: ${{ runner.os }}-playwright-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-playwright-

      - name: ğŸŒ Instalar browsers Playwright
        run: npx playwright install --with-deps

      - name: ğŸ” Executar linting
        run: npm run lint

      - name: ğŸ“ Verificar formataÃ§Ã£o
        run: npm run format:check

      - name: ğŸ§ª Executar testes - ${{ matrix.test-suite.name }}
        run: npm run ${{ matrix.test-suite.command }} -- --project=${{ matrix.test-suite.browser }}
        env:
          CI: true
          PLAYWRIGHT_BROWSERS_PATH: ~/.cache/ms-playwright

      - name: ğŸ“Š Upload dos resultados - ${{ matrix.test-suite.name }}
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: test-results-${{ matrix.test-suite.name }}-${{ github.run_number }}
          path: |
            playwright-report/
            test-results/
          retention-days: 30

      - name: ğŸ“¸ Upload screenshots (apenas em falhas)
        uses: actions/upload-artifact@v4
        if: failure()
        with:
          name: screenshots-${{ matrix.test-suite.name }}-${{ github.run_number }}
          path: |
            screenshots/
            videos/
          retention-days: 7

  # Job para executar testes completos
  test-complete:
    name: ğŸš€ Testes Completos
    runs-on: ubuntu-latest
    timeout-minutes: 45
    needs: health-check
    if: github.event_name == 'workflow_dispatch' || github.ref == 'refs/heads/main'
    
    steps:
      - name: ğŸ“¥ Checkout do cÃ³digo
        uses: actions/checkout@v4

      - name: ğŸ“¦ Setup Node.js ${{ env.NODE_VERSION }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: ğŸ“‹ Cache das dependÃªncias
        uses: actions/cache@v4
        with:
          path: ~/.npm
          key: ${{ runner.os }}-node-${{ hashFiles('**/package-lock.json') }}

      - name: ğŸ”§ Instalar dependÃªncias
        run: npm ci

      - name: ğŸ­ Cache dos browsers Playwright
        uses: actions/cache@v4
        with:
          path: ~/.cache/ms-playwright
          key: ${{ runner.os }}-playwright-${{ hashFiles('**/package-lock.json') }}

      - name: ğŸŒ Instalar browsers Playwright (todos)
        run: npx playwright install --with-deps

      - name: ğŸ” Executar linting
        run: npm run lint

      - name: ğŸ§ª Executar todos os testes
        run: npm run test:ci
        env:
          CI: true
          PLAYWRIGHT_BROWSERS_PATH: ~/.cache/ms-playwright

      - name: ğŸ“Š Upload dos resultados completos
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: complete-test-results-${{ github.run_number }}
          path: |
            playwright-report/
            test-results/
            relatorios/
          retention-days: 60

  # Job para validaÃ§Ã£o rÃ¡pida em PRs
  quick-validation:
    name: âš¡ ValidaÃ§Ã£o RÃ¡pida
    runs-on: ubuntu-latest
    timeout-minutes: 15
    needs: health-check
    if: github.event_name == 'pull_request'
    
    steps:
      - name: ğŸ“¥ Checkout do cÃ³digo
        uses: actions/checkout@v4

      - name: ğŸ“¦ Setup Node.js ${{ env.NODE_VERSION }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: ğŸ”§ Instalar dependÃªncias
        run: npm ci

      - name: ğŸŒ Instalar browser Chromium
        run: npx playwright install chromium --with-deps

      - name: ğŸ” Executar linting
        run: npm run lint

      - name: ğŸ“ Verificar formataÃ§Ã£o
        run: npm run format:check

      - name: ğŸ§ª Executar testes crÃ­ticos
        run: npm run test:critico -- --project=chrome
        env:
          CI: true

      - name: ğŸ§ª Executar smoke tests
        run: npm run test:smoke -- --project=chrome
        env:
          CI: true

  # Job para notificaÃ§Ã£o em caso de falha
  notify:
    name: ğŸ“¢ NotificaÃ§Ã£o
    runs-on: ubuntu-latest
    needs: [test, test-complete, quick-validation]
    if: always() && (needs.test.result == 'failure' || needs.test-complete.result == 'failure' || needs.quick-validation.result == 'failure')
    steps:
      - name: ğŸ“§ Notificar falha
        run: |
          echo "ğŸš¨ Alguns testes falharam!"
          echo "Verifique os artefatos e logs para mais detalhes."
          echo "Run ID: ${{ github.run_id }}"
          echo "Commit: ${{ github.sha }}"